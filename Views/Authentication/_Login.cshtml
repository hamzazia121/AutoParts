@model AutoPartsHub.Models.Login@{    ViewData["Title"] = "Login";}<div class="login-form-style">    <div class="site-logo text-center text-sm-start m-4 mb-5">        <a href="/Authentication/Login"><img src="/assets/img/AutoLogo.png" class="ml-auto mr-auto" alt="Logo" /></a>    </div>    <div class="form-validation">        <form id="loginForm" method="post">            <div>                <input asp-for="Email" placeholder="Email" id="textemail" />                <span asp-validation-for="Email" class="text-danger"></span>            </div>            <div>                <input asp-for="Password" type="password" id="textpassword" placeholder="Password" />                <span asp-validation-for="Password" class="text-danger"></span>            </div>            <div class="login-toggle-btn">                <input asp-for="RememberMe" type="checkbox" id="login-check" />                <label for="login-check">Remember me</label>                <a href="/Authentication/ForgotPassword">Forgot Password?</a>            </div>            <!-- Changed <a> to <button> -->            <a onclick="loginme()" class="btn btn-dark" href="javascript:void(0);">Login</a>        </form>    </div>    @if (Model.isInvalid)
    {        <div class="text-danger">            @Model.InvalidMessage        </div>    }</div><script src="https://code.jquery.com/jquery-3.6.0.min.js"></script><script>    $(document).ready(function () {        // Define loginme in the global scope        window.loginme = function () {            var form = $("#loginForm")[0];            var isValid = form.checkValidity();            if (!isValid) {                e.preventDefault();                e.stopPropagation();            }            else {                var UserName = $("#textemail").val();                var Password = $("#textpassword").val();                const KeepLoginIn = $('#login-check').val();                addSigninForm(UserName, Password, KeepLoginIn);            }            form.classList.add('was-validated');            return false;        };        function addSigninForm(UserName, Password, KeepLoginIn) {            var formData = new FormData();            formData.append("UserName", UserName);            formData.append("Password", Password);            formData.append("KeepLoginIn", KeepLoginIn);            $.ajax({                type: "Post",                url: "/login/",                data: formData,                processData: false,                contentType: false,                dataType: "json",                success: function (response) {                    if (response.success) {                        window.location.reload();                    }                    else {                    }                },                error: function (errormessage) {                    alert(errormessage.responseText);                }            });        }    });</script>